{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-12">
        <h1>Event List</h1>
        <a href="{{ path('plan_new') }}"><i class="fa pull-right fa-3x fa-plus-square" aria-hidden="true"></i></a>

        <table class="table">
            <thead class="thead-default">
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for plan in plans %}
                <tr>
                    <th><a href="{{ path('plan_show', { 'id': plan.id }) }}">{{ plan.title }}</a></th>
                    <td>{% if plan.date %}{{ plan.date|date('d.m.Y H:i') }}{% endif %}</td>
                    <td>{{ plan.description }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
