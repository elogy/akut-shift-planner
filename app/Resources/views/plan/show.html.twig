{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-12 d-flex justify-content-end">
        <h1 class="mr-auto p-2">{{ plan.title }}</h1>
        <h6 class="p-2">{% if plan.date %}{{ plan.date|date('d.m.Y') }}{% endif %}</h6>
    </div>
    {% if plan.description %}
        <div class="col-12">
            <blockquote class="blockquote">{{ plan.description }}</blockquote>
            {% if is_granted('ROLE_ADMIN') %}<a class="pull-right" href="{{ path('plan_edit', { 'id': plan.id }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>{% endif %}
        </div>
    {% endif %}

    <div class="col-12">
        {% if plan.shifts is not empty %}
            <table class="table">
                <thead class="thead-default">
                <tr>
                    <th>Shift Title</th>
                    <th>Starts</th>
                    <th>Ends</th>
                    <th>Description</th>
                    <th>People needed</th>
                </tr>
                </thead>
                <tbody>
                {% for shift in plan.shifts %}
                    <tr>
                        <th scope="row">{{ shift.title }}</th>
                        <td>{{ shift.start|date('H:i') }}</td>
                        <td>{{ shift.end|date('H:i') }}</td>
                        <td>{{ shift.description }}</td>
                        <td>
                            <ol>
                                {% set count = shift.numberPeople - (shift.people|length) %}

                                {% for person in shift.people %}
                                    <li>{{ person.name }}</li>
                                {% endfor %}

                                {% if count != 0 %}
                                    {% for person in 1..count %}
                                        {% if not plan.isTemplate %}
                                            <li><a href="{{ path('person_new', { 'shift': shift.id }) }}">Sign in</a> </li>
                                        {% else %}
                                            <li>Person</li>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </ol>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="alert alert-warning" role="alert">
                <strong>Warning!</strong> No shifts defined
            </div>
            <img class="img-fluid." src="https://media.giphy.com/media/MmFVEhDzF0UUw/giphy.gif">
        {% endif %}
    </div>
{% endblock %}
