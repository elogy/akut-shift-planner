{% extends 'base.html.twig' %}

{% block body %}
    {% if app.session.get(plan.id) is defined  %}
        {% set showDetails=true %}
    {% endif %}

    <div class="col-12 d-flex justify-content-end">
        <h1 class="mr-auto p-2">{{ plan.title }}</h1>
        <h6 class="p-2">{% if plan.date %}{{ plan.date|date('d.m.Y') }}{% endif %}</h6>
    </div>
    {% if plan.description %}
        <div class="col-12">
            <blockquote class="blockquote">{{ plan.description }}</blockquote>
            {% if is_granted('ROLE_ADMIN') %}<a class="pull-right" href="{{ path('plan_edit', { 'id': plan.id }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>{% endif %}
            {% if app.session.get(plan.id) is not empty %}
                <div class="alert alert-info" role="alert">
                    <strong>Important!</strong> Save this password: <b>{{ app.session.get(plan.id) }}</b> <br>You'll need it to access the plan details.
                </div>
            {% endif %}
        </div>
    {% endif %}

    <div class="col-12">
        {% if showDetails is not defined%}
            <a id="passwordPrompt" href="#" class="pull-right"><i class="fa fa-eye" aria-hidden="true"></i> Show details</a>
        {% endif %}

        {% if plan.shifts is not empty %}
            <table class="table">
                <thead class="thead-default">
                <tr>
                    <th>Shift Title</th>
                    <th>Starts</th>
                    <th>Ends</th>
                    <th>Description</th>
                    <th>People needed</th>
                </tr>
                </thead>
                <tbody>
                {% for shift in plan.shifts %}
                    <tr>
                        <th scope="row">{{ shift.title }}</th>
                        <td>{{ shift.start|date('H:i') }}</td>
                        <td>{{ shift.end|date('H:i') }}</td>
                        <td>{{ shift.description }}</td>
                        <td>
                            <ol>
                                {% set count = shift.numberPeople - (shift.people|length) %}

                                {% for person in shift.people %}
                                    {% if showDetails is defined%}
                                        <li>{{ person.name }}</li>
                                    {% else %}
                                        <li>{{ person.alias }}</li>
                                    {% endif %}
                                {% endfor %}

                                {% if count != 0 %}
                                    {% for person in 1..count %}
                                        {% if not plan.isTemplate %}
                                            <li><a href="{{ path('person_new', { 'shift': shift.id }) }}">Sign in</a> </li>
                                        {% else %}
                                            <li>Person</li>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </ol>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="alert alert-warning" role="alert">
                <strong>Warning!</strong> No shifts defined
            </div>
            <img class="img-fluid." src="https://media.giphy.com/media/MmFVEhDzF0UUw/giphy.gif">
        {% endif %}
    </div>

    <!-- Modal -->
    <div class="modal fade" id="passwordShowModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
