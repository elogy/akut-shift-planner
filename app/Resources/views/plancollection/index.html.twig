{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-12 d-flex justify-content-end">
        <h1 class="mr-auto p-2">{% trans %}plan_collection{% endtrans %}</h1>
    </div>

    <div class="col-12">
        {% if planCollections is not empty %}
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>{{ knp_pagination_sortable(pagination, 'title'|trans, 'p.title') }} <i class="fa fa-sort" aria-hidden="true"></i></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for collection in planCollections %}
                        <tr>
                            <th><a href="{{ path('plancollection_show', { 'id': collection.id }) }}">{{ collection.title }}</a></th>
                        </tr>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('plancollection_show', { 'id': collection.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('plancollection_edit', { 'id': collection.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                <strong>{% trans %}warning{% endtrans %}</strong> {% trans %}no_plan_collections{% endtrans %}
            </div>
        {% endif %}
    </div>
{% endblock %}

